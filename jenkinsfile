pipeline{
	agent {
	label 'label1'
	}
	stages {
	parallel{
  stage('BUILD') {
    steps {
     echo "this is build stage"
	 sh 'sleep 5'
    }
  }

  stage('TEST') {
    steps {
      echo "this is test stage"
	  sh 'sleep 5'
    }
  }
  }
environment {
  NAME = "AKASH"
}
  stage('DEPLOY') {
    steps {
      echo "this is test stage"
	  echo "$NAME"
	  sh 'sleep 5'
    }
  }

}
	
}