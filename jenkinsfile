pipeline{
	agent {
	label 'label1'
	}
stages {
  stage {
    parallel {
	stage('BUILD') {
    steps {
     echo "this is build stage"
	 sh 'sleep 5'
    }
  }

  stage('DEPLOY') {
    steps {
      echo "this is deploy stage"
	  sh 'sleep 5'
    }
  }
  stage('TEST') {
  environment {
  NAME = "AKASH"
}
    steps {
      echo "this is test stage"
	  echo "$NAME"
	  sh 'sleep 5'
    }
  }
    }
  }
  stage('NEW') {
  steps {
	echo "hi"
	}
	}

}
}